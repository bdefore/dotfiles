yay -S \
  dnsutils \
  net-tools \
  simplescreenrecorder \
  ripgrep \
  gnome-disk-utility \
  x11vnc \
  code \
  code-server \
  git-delta \
  procs \
  tmux \
  vim \
  ngrok \
  xow \
  ncdu \
  xorg-server-xvfb \
  chromium \
  ttc-iosevka \
  alacritty \
  powertop \
  firefox-pwa-bin \
  viu \
  iftop \
