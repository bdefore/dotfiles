yay -S \
  bitwig-studio \
  wine-staging \
  yabridge \
  yabridgectl \
  realtime-privileges \
  vcvrack-bin \
  obs-studio

# yabridge needs adding to the realtime group to exceed memory locking limits
# depends on realtime-priveleges package
# https://github.com/robbert-vdh/yabridge#troubleshooting-common-issues
sudo gpasswd -a "$USER" realtime

# manjaro: switch from pulseaudio to pipewire, agree to removing all conflicting
yay -S \
  manjaro-pipewire \
  pipewire-pulse

systemctl start --user pipewire-pulse

source ~/.bash_profile

yabridgectl add "~/.wine/drive_c/Program Files/Common Files/VST3"
yabridgectl add "~/.wine/drive_c/Program Files/VstPlugins"
yabridgectl add "~/.wine/drive_c/Program Files/Steinberg/VstPlugins"
yabridgectl sync

## Some further audio plugin setup:

# - Use rclone copy to get your cloud storage of plugins, say to ~/cloud/b2/AudioPlugins
# - Create symlink for Linux native plugins:
# - `ln -s ~/cloud/b2/AudioPlugins/linux/.vst ~/.vst``
# - `ln -s ~/cloud/b2/AudioPlugins/linux/.vst3 ~/.vst3`
# - Copy the Windows native plugins (in ~/cloud/b2/AudioPlugins/win) to the corresponding directory of local wine
# - `yabridgectl status` and confirm plugins are found, although not yet synced
# - `yabridgectl sync`
# - Test in your DAW
